
<% content_for :head do %>
	<meta property="og:title" content="<%= @post.title %>"></meta>
	<meta property="og:description" content="<%= @post.description %>"></meta>
	<meta property="og:image" content="<%= @post.photo.url(:medium) %>"></meta>
	<meta property="fb:app_id" content=""></meta>	
<% end %>


<div class="row">
	<div id="post-collection" class="col-md-8" style="min-height: 1000px;">
		<div class="row post-container">
			<article>
				<header class="post-header">
					<h2 class="post-title">
						<a href="#" ><%= @post.title %></a>
					</h2>

					<div class="post-vote">
						<div class="post-action-list">
							<div class="post-action">
								<ul class="list-unstyled">
									<li>
										<a href="javascript:void(0)" >
											<i class="icon-thumbs-up-alt icon-2x icon-upvote" data-id="<%= @post.id %>"></i>
										</a>
									</li>
									<li>
										<a href="javascript:void(0)">
											<span class="vote-counter vote-counter-<%= @post.id %>"><%= @post.vote_count %></span>
										</a>
									</li>
									<li>
										<a href="javascript:void(0)" >
											<i class="icon-thumbs-down-alt icon-2x icon-downvote" data-id="<%= @post.id %>"></i>
										</a>
									</li>
								</ul>
							</div>
							<div class="post-action">
								<!-- comment -->
							</div>
						</div>
					</div>
				</header>

				<div class="row">
					<div class="col-md-10" style="max-width:80%">
						<%= image_tag @post.photo.url(:medium), :class => "img-rounded"%>
					</div>
				</div>

				<div class="row">
					<div class="col-md-10 share" style="border: none;">
						<div class="share-count">
							<p><strong>999</strong> shares</p> 
						</div>

						<ul class="list-unstyled">
							<li><a class="facebook facebook-share" href="javascript:void(0)"
							       data-url="<%= post_url(@post) %>"></a></li>
							<li><a class="twitter" href="javascript:void(0)"></a></li>
							<li><a class="google-plus" href="javascript:void(0)"></a></li>
							<li><a class="pinterest" href="javascript:void(0)"></a></li>
							<li><a class="email" href="javascript:void(0)"></a></li>
						</ul>

					</div>
            <% if user_signed_in? %>
              <div>
                <p><a class="btn btn-danger float-right icon-delete-post" data-id="<%= @post.id %>">Delete</a></p>
              </div>
            <% end %>
				</div>	
			</article>
		</div>
	</div>

	<div class="col-md-4" style="margin-top: 20px; min-height: 1000px;">
		<!-- Right-hand column -->
		<!-- Ads columns, relavent posts-->

    <div id="ads-collection">
      <%= render collection: @posts, partial: "ad" %>
    </div>

    <div id="thumb-collection">
      <%= render collection: @posts, partial: "thumb" %>
    </div>
	</div>

</div>
